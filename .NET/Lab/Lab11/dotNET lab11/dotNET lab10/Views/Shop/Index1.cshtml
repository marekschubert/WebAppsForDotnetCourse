@model ShopArticleViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<form asp-action="Filter">
    <div class="form-group">
        <label class="control-label">Wybierz kategorię</label>
        <select asp-for="selectedListItem" name="categories" class="form-control" asp-items="ViewBag.Categories" ></select>
        <a asp-action="Index">Filtruj</a> |
    </div>
</form>

@Model.selectedListItem

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.articles.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.articles.First().Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.articles.First().Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.articles.First().Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.articles)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <img src="~/@item.Image" alt="@item.Image" heigth="100" width="100">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
            </tr>
        }
    </tbody>
</table>