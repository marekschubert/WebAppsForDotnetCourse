@page
@model dotNET_lab12.Pages.Shop.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@using (Html.BeginForm("OnPostAsync", "Shop", FormMethod.Post))
{
    @Html.DropDownList("selectedCategoryValue", (SelectList)ViewData["Categories"], "Category")
    <input type="submit" value="submit" />
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Category)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Article)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <img src="~/@item.Image" alt="@item.Image" heigth="100" width="100">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
            </tr>
        }
    </tbody>
</table>